<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:translationZ="2sp"
                                             android:layout_margin="2sp"
                                             android:background="@drawable/skill_adapter_background_main"
                                             android:padding="2sp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             tools:targetApi="lollipop">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:id="@+id/img"
            android:src="@drawable/flag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"/>
    <android.support.constraint.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/skillName"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lvl"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.05"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/lvl"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical2"
            app:layout_constraintTop_toBottomOf="@id/skillName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
    />
    <android.support.constraint.Guideline
            android:id="@+id/guideline_vertical2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/chooseSkill"
            android:textColor="@color/grey1"
            android:text="@string/start"
            android:textStyle="bold"
            android:background="@drawable/button_blue"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

    />


</android.support.constraint.ConstraintLayout>