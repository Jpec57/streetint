<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_margin="2sp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             >
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:background="@drawable/skill_adapter_background"
            android:translationZ="2sp"
            android:layout_margin="2sp"
            tools:targetApi="lollipop">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:maxWidth="40sp"
                android:maxHeight="40sp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/back_lever"
                android:id="@+id/img"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical"
                app:layout_constraintEnd_toStartOf="@id/progressName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:id="@+id/progressName"
                app:layout_constraintStart_toEndOf="@id/img"
                app:layout_constraintEnd_toStartOf="@id/guideline_vertical2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />

        <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.85"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/percent"
                android:textColor="@color/white"
                android:text="@string/six"
                app:layout_constraintStart_toEndOf="@id/guideline_vertical2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:background="#f2f2f2"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:id="@+id/workout"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/face_the_bar"
                    android:id="@+id/first"
                    android:padding="5sp"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_vertical_in"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:adjustViewBounds="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:id="@+id/firstExo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_vertical_in"
                    app:layout_constraintTop_toBottomOf="@id/first"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constrainedWidth="true"
            />
            <android.support.constraint.Guideline
                    android:id="@+id/guideline_vertical_in"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.25"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/face_the_bar"
                    android:id="@+id/second"
                    android:padding="5sp"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toEndOf="@id/guideline_vertical_in"
                    app:layout_constraintEnd_toStartOf="@id/guideline_vertical_in2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:adjustViewBounds="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:id="@+id/secondExo"
                    app:layout_constraintStart_toEndOf="@id/guideline_vertical_in"
                    app:layout_constraintEnd_toStartOf="@id/guideline_vertical_in2"
                    app:layout_constraintTop_toBottomOf="@id/first"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constrainedWidth="true"
            />
            <android.support.constraint.Guideline
                    android:id="@+id/guideline_vertical_in2"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/face_the_bar"
                    android:id="@+id/third"
                    android:padding="5sp"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toEndOf="@id/guideline_vertical_in2"
                    app:layout_constraintEnd_toStartOf="@id/guideline_vertical_in3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:adjustViewBounds="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:id="@+id/thirdExo"
                    app:layout_constraintStart_toEndOf="@id/guideline_vertical_in2"
                    app:layout_constraintEnd_toStartOf="@id/guideline_vertical_in3"
                    app:layout_constraintTop_toBottomOf="@id/first"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constrainedWidth="true"
            />
            <android.support.constraint.Guideline
                    android:id="@+id/guideline_vertical_in3"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintVertical_bias="0"
                    android:src="@drawable/face_the_bar"
                    android:id="@+id/fourth"
                    android:padding="5sp"
                    app:layout_constraintStart_toEndOf="@id/guideline_vertical_in3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:adjustViewBounds="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:id="@+id/fourthExo"
                    app:layout_constraintStart_toEndOf="@id/guideline_vertical_in3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/first"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constrainedWidth="true"
            />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/workout"
                app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/goal"
                    android:text="@string/app_name"
                    app:layout_constraintHorizontal_bias="0.15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start"
                    android:id="@+id/start"
                    android:textStyle="bold"
                    android:textColor="@color/grey1"
                    android:background="@color/blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1"

            />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>




</android.support.constraint.ConstraintLayout>